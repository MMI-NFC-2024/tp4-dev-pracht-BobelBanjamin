---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout>
    <div
        class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50"
    >
        <div class="container mx-auto px-4 py-8">
            <!-- Navigation -->
            <nav
                class="mb-8 bg-white/80 backdrop-blur-sm rounded-full px-6 py-3 shadow-lg"
            >
                <div class="flex items-center justify-between">
                    <a
                        href="/"
                        class="text-blue-600 hover:text-blue-700 font-medium flex items-center gap-2"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Accueil
                    </a>
                    <div class="flex gap-4 text-sm">
                        <a
                            href="/simple"
                            class="text-gray-600 hover:text-gray-900 transition-colors"
                            >Simple</a
                        >
                        <a
                            href="/simple-penguin"
                            class="text-gray-600 hover:text-gray-900 transition-colors"
                            >Penguin</a
                        >
                        <a
                            href="/penguin-filter"
                            class="text-gray-600 hover:text-gray-900 transition-colors"
                            >Filtre</a
                        >
                        <a
                            href="/penguin-multi-filter"
                            class="text-gray-900 font-bold border-b-2 border-purple-600 pb-1"
                            >Multi-filtres</a
                        >
                        <a
                            href="/other-dataset"
                            class="text-gray-600 hover:text-gray-900 transition-colors"
                            >Iris</a
                        >
                    </div>
                </div>
            </nav>

            <!-- Header -->
            <div class="text-center mb-8">
                <h1
                    class="text-4xl font-bold mb-3 bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent"
                >
                    Penguin avec plusieurs filtres
                </h1>
                <p class="text-gray-600 max-w-2xl mx-auto">
                    Explorez le dataset Palmer Penguins en combinant plusieurs
                    filtres : esp√®ce, √Æle et sexe.
                </p>
            </div>

            <!-- Filtres -->
            <div class="bg-white rounded-2xl shadow-xl p-6 mb-6">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <!-- Filtre esp√®ce -->
                    <div>
                        <label
                            for="species"
                            class="block text-sm font-medium text-gray-700"
                            >Esp√®ce</label
                        >
                        <select
                            id="species"
                            class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300
              focus:outline-none focus:ring-purple-500 focus:border-purple-500 rounded-lg"
                        >
                            <option value="">Toutes les esp√®ces</option>
                            <option value="Adelie">üêß Adelie</option>
                            <option value="Chinstrap">üêß Chinstrap</option>
                            <option value="Gentoo">üêß Gentoo</option>
                        </select>
                    </div>

                    <!-- Filtre √Æle -->
                    <div>
                        <label
                            for="island"
                            class="block text-sm font-medium text-gray-700"
                            >√éle</label
                        >
                        <select
                            id="island"
                            class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300
              focus:outline-none focus:ring-purple-500 focus:border-purple-500 rounded-lg"
                        >
                            <option value="">Toutes les √Æles</option>
                            <option value="Biscoe">üèùÔ∏è Biscoe</option>
                            <option value="Dream">üèùÔ∏è Dream</option>
                            <option value="Torgersen">üèùÔ∏è Torgersen</option>
                        </select>
                    </div>

                    <!-- Filtre sexe -->
                    <div>
                        <label
                            for="sex"
                            class="block text-sm font-medium text-gray-700"
                            >Sexe</label
                        >
                        <select
                            id="sex"
                            class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300
              focus:outline-none focus:ring-purple-500 focus:border-purple-500 rounded-lg"
                        >
                            <option value="">Tous les sexes</option>
                            <option value="MALE">‚ôÇÔ∏è M√¢le</option>
                            <option value="FEMALE">‚ôÄÔ∏è Femelle</option>
                        </select>
                    </div>
                </div>

                <!-- Stats -->
                <div id="stats" class="mt-6 text-right">
                    <span class="text-sm text-gray-500"
                        >Nombre de manchots affich√©s</span
                    >
                    <div class="text-2xl font-bold text-gray-900" id="count">
                        -
                    </div>
                </div>
            </div>

            <!-- Graphique -->
            <div class="bg-white rounded-2xl shadow-xl p-8">
                <div id="plotContainer" class="flex justify-center"></div>
            </div>
        </div>
    </div>

    <script>
        import * as Plot from "@observablehq/plot";
        import penguins from "../assets/penguins.json";

        const selectSpecies = document.querySelector("#species");
        const selectIsland = document.querySelector("#island");
        const selectSex = document.querySelector("#sex");
        const statsCount = document.querySelector("#count");

        function renderPlot() {
            const species = selectSpecies.value;
            const island = selectIsland.value;
            const sex = selectSex.value;

            const container = document.querySelector("#plotContainer");
            container.innerHTML = "";

            let filteredData = penguins.filter(
                (d) => d.culmen_length_mm !== null,
            );

            if (species)
                filteredData = filteredData.filter(
                    (d) => d.species === species,
                );
            if (island)
                filteredData = filteredData.filter((d) => d.island === island);
            if (sex) filteredData = filteredData.filter((d) => d.sex === sex);

            statsCount.textContent = `${filteredData.length}`;

            const plot = Plot.plot({
                width: 800,
                height: 500,
                marks: [
                    Plot.dot(filteredData, {
                        x: "culmen_length_mm",
                        y: "culmen_depth_mm",
                        stroke: "species",
                        r: "body_mass_g",
                        tip: true,
                    }),
                ],
                grid: true,
                x: { label: "Longueur du bec (mm) ‚Üí", nice: true },
                y: { label: "‚Üë Profondeur du bec (mm)", nice: true },
                r: { range: [2, 8], label: "Masse corporelle (g)" },
                color: { legend: true, scheme: "Observable10" },
                style: { fontSize: "14px" },
            });

            container.append(plot);
        }

        selectSpecies.addEventListener("change", renderPlot);
        selectIsland.addEventListener("change", renderPlot);
        selectSex.addEventListener("change", renderPlot);

        renderPlot();
    </script>
</Layout>
