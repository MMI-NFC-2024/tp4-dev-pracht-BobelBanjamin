---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout>
    <div
        class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50"
    >
        <div class="container mx-auto px-4 py-8">
            <!-- Navigation modernisée -->
            <nav
                class="mb-8 bg-white/80 backdrop-blur-sm rounded-full px-6 py-3 shadow-lg"
            >
                <div class="flex items-center justify-between">
                    <a
                        href="/"
                        class="text-blue-600 hover:text-blue-700 font-medium flex items-center gap-2"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Accueil
                    </a>
                    <div class="flex gap-4 text-sm">
                        <a
                            href="/simple"
                            class="text-gray-600 hover:text-gray-900 transition-colors"
                            >Simple</a
                        >
                        <a
                            href="/simple-penguin"
                            class="text-gray-900 font-bold border-b-2 border-purple-600 pb-1"
                        >
                            Penguin
                        </a>
                        <a
                            href="/penguin-filter"
                            class="text-gray-600 hover:text-gray-900 transition-colors"
                        >
                            Filtre
                        </a>
                        <a
                            href="/penguin-multi-filter"
                            class="text-gray-600 hover:text-gray-900 transition-colors"
                        >
                            Multi-filtres
                        </a>
                        <a
                            href="/other-dataset"
                            class="text-gray-600 hover:text-gray-900 transition-colors"
                        >
                            Iris
                        </a>
                    </div>
                </div>
            </nav>

            <!-- Header -->
            <div class="text-center mb-8">
                <h1
                    class="text-4xl font-bold mb-3 bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent"
                >
                    Simple Penguin
                </h1>
                <p class="text-gray-600 max-w-2xl mx-auto">
                    Visualisation de base du dataset Palmer Penguins. Chaque
                    point représente un pingouin avec sa longueur et sa
                    profondeur de bec.
                </p>
            </div>

            <!-- Carte contenant le graphique -->
            <div class="bg-white rounded-2xl shadow-xl p-8 max-w-5xl mx-auto">
                <div id="myplot" class="flex justify-center"></div>
            </div>
        </div>
    </div>

    <script>
        import * as Plot from "@observablehq/plot";
        import penguins from "../assets/penguins.json";

        const plot = Plot.plot({
            width: 800,
            height: 500,
            marks: [
                Plot.dot(penguins, {
                    x: "culmen_length_mm",
                    y: "culmen_depth_mm",
                    stroke: "species",
                    r: 4,
                    opacity: 0.7,
                    tip: true,
                }),
            ],
            grid: true,
            x: { label: "Longueur du bec (mm) →", nice: true },
            y: { label: "↑ Profondeur du bec (mm)", nice: true },
            color: { legend: true, scheme: "Observable10" },
            style: { fontSize: "14px" },
        });

        document.querySelector("#myplot").append(plot);
    </script>
</Layout>
