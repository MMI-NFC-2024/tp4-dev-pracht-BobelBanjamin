---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <div
        class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50"
    >
        <div class="container mx-auto px-4 py-8">
            <!-- Navigation améliorée -->
            <nav
                class="mb-8 bg-white/80 backdrop-blur-sm rounded-full px-6 py-3 shadow-lg"
            >
                <div class="flex items-center justify-between">
                    <a
                        href="/"
                        class="text-blue-600 hover:text-blue-700 font-medium flex items-center gap-2"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Accueil
                    </a>
                    <div class="flex gap-4 text-sm">
                        <a
                            href="/simple"
                            class="text-gray-900 font-bold border-b-2 border-blue-600 pb-1"
                            >Simple</a
                        >
                        <a
                            href="/simple-penguin"
                            class="text-gray-600 hover:text-gray-900 transition-colors"
                            >Penguin</a
                        >
                        <a
                            href="/penguin-filter"
                            class="text-gray-600 hover:text-gray-900 transition-colors"
                            >Filtre</a
                        >
                        <a
                            href="/penguin-multi-filter"
                            class="text-gray-600 hover:text-gray-900 transition-colors"
                            >Multi-filtres</a
                        >
                        <a
                            href="/other-dataset"
                            class="text-gray-600 hover:text-gray-900 transition-colors"
                            >Iris</a
                        >
                    </div>
                </div>
            </nav>

            <!-- Header de la page -->
            <div class="text-center mb-8">
                <h1
                    class="text-4xl font-bold mb-3 bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent"
                >
                    Graphique Simple
                </h1>
                <p class="text-gray-600 max-w-2xl mx-auto">
                    Exemple basique d'utilisation d'Observable Plot avec Astro.
                    Ce graphique en barres affiche des valeurs aléatoires
                    générées dynamiquement.
                </p>
            </div>

            <!-- Container du graphique avec style -->
            <div class="bg-white rounded-2xl shadow-xl p-8 max-w-4xl mx-auto">
                <div class="mb-4">
                    <span
                        class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800"
                    >
                        <svg
                            class="w-4 h-4 mr-2"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                            ></path>
                        </svg>
                        Graphique en barres
                    </span>
                </div>
                <div id="myplot" class="flex justify-center"></div>
            </div>
        </div>
    </div>

    <script>
        import * as Plot from "@observablehq/plot";

        const plot = Plot.plot({
            height: 300,
            marginBottom: 50,
            marks: [
                Plot.barY(
                    Array.from({ length: 10 }, (_, i) => ({
                        x: `Cat ${i + 1}`,
                        y: Math.random() * 100,
                    })),
                    {
                        x: "x",
                        y: "y",
                        fill: "steelblue",
                        tip: true,
                    },
                ),
                Plot.ruleY([0]),
            ],
            x: {
                label: "Catégories →",
                tickRotate: -45,
            },
            y: {
                label: "↑ Valeurs",
                grid: true,
            },
        });

        const div = document.querySelector("#myplot");
        div.append(plot);
    </script>
</Layout>
